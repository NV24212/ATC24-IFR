{
  "version": 2,
  "functions": {
    "api/server.js": {
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/server.js" },
    { "src": "/health", "dest": "/api/server.js" },
    { "src": "/flight-plans", "dest": "/api/server.js" },
    { "src": "/admin", "dest": "/api/server.js" },
    { "src": "/license", "dest": "/api/server.js" },
    { "src": "/", "dest": "/api/server.js" },
    { "src": "/public/(.*)", "dest": "/public/$1" }
  ]
}
